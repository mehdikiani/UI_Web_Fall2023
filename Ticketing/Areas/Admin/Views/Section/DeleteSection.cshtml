@model DeleteSectionModel

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">حذف بخش </h3>
    </div>      
    <form asp-controller="Section" asp-action="DeleteSection" asp-area="Admin">
        <div class="card-body">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Title" />
            <div asp-validation-summary="All"></div>
            <div class="alert alert-danger">
                آیا بخش زیر حذف شود؟
                <br />
                '@(Model.Title)'
            </div>

        </div>
        <div class="card-footer">
            <input type="submit" value="بله" class="btn btn-danger" />
            <a asp-action="List" asp-controller="Section" asp-area="Admin" class="btn btn-primary">خیر</a>

        </div>
    </form>
</div>
